			exec b{
				var bg = ResourceManager.GetBackground("space.sun");
				ServiceLocator.Find<IBackgroundOrchestrator>().ConstructTarget(bg, false, false);
				ServiceLocator.Find<PlayerController>().SetLocation(py(-1.5));
			}
