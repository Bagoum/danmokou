			}

			async "dot-black/w" <5;:> gcr2 240 inf <360h> {
				delay 120
				root zero
			} gsr2c (30 * dl ^ 0.6) {

			} simple rvelocity cx -1 {
				
			}
			async "star-*/" <5;:> gcr2 240 inf <> {
